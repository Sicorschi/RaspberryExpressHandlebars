<div class="container mt-4 p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h5 class="text-center mb-2">
                        Sign In
                    </h5>
                </div>
                <div class="card-body">
                    <img src="/img/logo.png" alt="Logo pic" class="card-img-top mx-auto m-2 w-50">
                    <form action="/auth/signin" method="POST">
                        <div class="form-group m-4">
                            <input type="text" name="username" placeholder="Username" autocomplete="off" class="form-control">
                        </div>
                        <div class="form-group m-4">
                            <input type="password" name="password" placeholder="Password" autocomplete="off" class="form-control">
                        </div>
                        <div class="form-group m-4">
                            <button class="btn btn-success btn-block" type="submit">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>