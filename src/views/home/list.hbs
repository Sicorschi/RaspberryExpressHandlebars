<div class="container p-4">
    <div class="row m-4">
        {{#each links}}
            <div class="card m-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        {{ title }}
                    </h5>
                    <a href="http://{{url}}" target="blank">
                        Link here
                    </a>
                    <p class="card-text">
                        {{ description }}
                    </p>
                    <p>
                        {{timeago created_at}}
                    </p>
                    <div class="d-flex flex-column bd-highlight mb-3">
                        <a href="/links/delete/{{id}}" class="btn btn-danger m-2">
                            Delete
                        </a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary m-2">
                            Edit
                        </a>
                        <a href="/links/add" class="btn btn-primary m-2">
                            Add
                        </a>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="col-md-8 mx-auto">
                    <div class="card card-body text-center">
                        <p>
                            There are no links to list
                        </p>
                        <a href="/links/add">
                            Add one
                        </a>
                    </div>
                </div>
        {{/each}}
    </div>
    <div class="row m-4">
        {{#each users}}
         <div class="card m-3" style="width: 18rem;">
                <div class="card-body">
                    <h3 class="card-title text-uppercase m-4">
                        {{ username }}
                    </h3>
                    <h5 class="card-title m-4">
                        {{ password }}
                    </h5>
                    <h5 class="card-title text-uppercase m-4">
                        {{ fullname }}
                    </h5>
                     <p>
                        {{timeago created_at}}
                    </p>
                    <div class="d-flex flex-column bd-highlight mb-3">
                        <a href="/users/delete/{{id}}" class="btn btn-danger m-2">
                            Delete
                        </a>
                        <a href="/users/edit/{{id}}" class="btn btn-secondary m-2">
                            Edit
                        </a>
                        <a href="/users/add" class="btn btn-primary m-2">
                            Add
                        </a>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="col-md-8 mx-auto">
                    <div class="card card-body text-center">
                        <p>
                            There are no users to list
                        </p>
                        <a href="/users/add">
                            Add one
                        </a>
                    </div>
                </div>
        {{/each}}
    </div>
</div>