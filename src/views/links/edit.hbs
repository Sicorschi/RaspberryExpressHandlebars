<div class="main-add-form-container">
    <h5 class="m-4 text-white">
        Edit web
    </h5>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form action="/links/edit/{{link.id}}" method="POST">
                            <div class="form-group m-4">
                                <input type="text" value="{{link.title}}" class="form-control" name="title" autocomplete="off" placeholder="Title" autofocus>
                            </div>
                             <div class="form-group m-4">
                                <input type="text" value="{{link.url}}" class="form-control" autocomplete="off" name="url" placeholder="URL">
                            </div>
                             <div class="form-group m-4">
                                 <textarea name="description" cols="30" rows="5" value="{{link.description}}" autocomplete="off" placeholder="Your description bitch"></textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>