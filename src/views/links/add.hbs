<div class="main-add-form-container">
    <h5 class="m-4 text-white">
        Add new web
    </h5>
    <div class="container m-2 p-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form action="/links/add" method="POST">
                            <div class="form-group m-4">
                                <input type="text" class="form-control" name="title" autocomplete="off" placeholder="Title" autofocus>
                            </div>
                             <div class="form-group m-4">
                                <input type="text" class="form-control" autocomplete="off" name="url" placeholder="URL">
                            </div>
                             <div class="form-group m-4">
                                <textarea name="description" col="5" rows="5" class="form-control" placeholder="Web description bitch" autocomplete="off"></textarea>
                            </div>
                            <div class="form-group m-4">
                                <button class="btn btn-primary btn-block" type="submit">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>