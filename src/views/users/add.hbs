<div class="main-add-form-container">
    <h5 class="m-4 text-white">
        Add new avatar
    </h5>
    <div class="container m-2 p-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form action="/users/add" method="POST">
                            <div class="form-group m-4">
                                <input type="text" class="form-control" name="username" autocomplete="off" placeholder="Firstname" autofocus>
                            </div>
                             <div class="form-group m-4">
                                <input type="text" class="form-control" autocomplete="off" name="password" placeholder="Password">
                            </div>
                             <div class="form-group m-4">
                                <input type="text" class="form-control" autocomplete="off" name="fullname" placeholder="Your fullname bitch">
                            </div>
                            <div class="form-group m-4">
                                <button class="btn btn-primary" type="submit">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>