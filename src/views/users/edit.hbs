<div class="main-add-form-container">
    <h5 class="m-4 text-white">
        Edit avatar
    </h5>
    <div class="container m-2 p-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form action="/users/edit/{{user.id}}" method="POST">
                            <div class="form-group m-4">
                                <input type="text" value="{{user.username}}" class="form-control" name="username" autocomplete="off" placeholder="Firstname" autofocus>
                            </div>
                             <div class="form-group m-4">
                                <input type="text" value="{{user.password}}" class="form-control" autocomplete="off" name="password" placeholder="Password">
                            </div>
                             <div class="form-group m-4">
                                <input type="text" value="{{user.fullname}}" class="form-control" autocomplete="off" name="fullname" placeholder="Your fullname bitch">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>