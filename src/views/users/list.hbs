<div class="container p-4">
    <div class="row">
        {{#each users}}
            <div class="col-md-4">
                <div class="card text-center">
                    <h3 class="card-title text-uppercase m-4">
                        {{ username }}
                    </h3>
                    <h3 class="card-title text-uppercase m-4">
                        {{ password }}
                    </h3>
                    <h3 class="card-title text-uppercase m-4">
                        {{ fullname }}
                    </h3>
                     <p>
                        {{timeago created_at}}
                    </p>
                    <div class="actions-buttons">
                        <a href="/users/delete/{{id}}" class="btn btn-danger m-4">
                            Delete
                        </a>
                        <a href="/users/edit/{{id}}" class="btn btn-secondary m-4">
                            Edit
                        </a>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="col-md-8 mx-auto">
                    <div class="card card-body text-center">
                        <p>
                            There are no users to list
                        </p>
                        <a href="/users/add">
                            Add one
                        </a>
                    </div>
                </div>
        {{/each}}
    </div>
</div>